// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABSE_URL")
}

model Item {
  id            Int       @default(autoincrement()) @id
  title         String
  description   String?
  price         Decimal?  @db.Money
  type          Type
  published     Boolean   @default(false)
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime? @updatedAt @map(name: "updated_at")
  images        String[]
}

enum Type {
  TABLEAU
  LUMINAIRE
  CHAISE
  MOBILIER
  ELECTRONIQUE
  JEUX
  MIROIR
  DIVERS
  FABRICATION
}